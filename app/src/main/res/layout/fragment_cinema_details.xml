<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_cinema_40dp">

        <ImageView
            android:layout_marginLeft="@dimen/dimens_cinema_40dp"
            android:layout_gravity="center"
            android:src="@drawable/cinema_detail_icon_location"
            android:layout_width="@dimen/dimens_cinema_24dp"
            android:layout_height="@dimen/dimens_cinema_24dp" />
        <TextView
            android:id="@+id/tv_address"
            android:text="地址哈哈"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dimens_cinema_24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_cinema_40dp">

        <ImageView
            android:layout_marginLeft="@dimen/dimens_cinema_40dp"
            android:layout_gravity="center"
            android:src="@drawable/cinema_detail_icon_phone"
            android:layout_width="@dimen/dimens_cinema_24dp"
            android:layout_height="@dimen/dimens_cinema_24dp" />
        <TextView
            android:id="@+id/tv_phone"
            android:text="电话"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dimens_cinema_24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_cinema_40dp">

        <ImageView
            android:layout_marginLeft="@dimen/dimens_cinema_40dp"
            android:layout_gravity="center"
            android:src="@drawable/cinema_detail_icon_route"
            android:layout_width="@dimen/dimens_cinema_24dp"
            android:layout_height="@dimen/dimens_cinema_24dp" />
        <TextView
            android:id="@+id/tv_car"
            android:text="乘车路线"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dimens_cinema_24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/car_route"
        android:text="哈哈"
        android:layout_marginLeft="@dimen/dimens_cinema_40dp"
        android:layout_marginTop="@dimen/dimens_cinema_40dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_cinema_80dp" />

</LinearLayout>
