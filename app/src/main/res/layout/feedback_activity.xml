<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_margin="@dimen/dimens_fragment_my_16dp"
        android:id="@+id/tv_activity_idea_feedback"
        android:text="意见反馈"
        android:textSize="@dimen/dimens_fragment_my_22dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_below="@+id/tv_activity_idea_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_feedback_img"
            android:layout_centerHorizontal="true"
            android:layout_width="@dimen/dimens_fragment_my_100dp"
            android:layout_height="@dimen/dimens_fragment_my_100dp"
            android:src="@drawable/frament_my_success"
            />
        <TextView
            android:id="@+id/tv_feedback_success"
            android:layout_marginTop="@dimen/dimens_fragment_my_22dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/iv_feedback_img"
            android:text="反馈成功"
            android:textSize="@dimen/dimens_fragment_my_22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:padding="@dimen/dimens_fragment_my_10dp"
            android:layout_marginTop="@dimen/dimens_fragment_my_22dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_feedback_success"
            android:text="感谢您对维度影院的关注与支持,我们会认真处理您的反馈,尽快修复和完善相关功能。"
            android:textSize="@dimen/dimens_fragment_my_16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</RelativeLayout>
