<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_fragmen_movie_186dp"
        android:background="@drawable/movie_top_background">

        <ImageView
            android:layout_marginBottom="@dimen/dimens_cinema_16dp"
            android:src="@drawable/rectangle"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="测试"
            android:layout_marginLeft="@dimen/dimens_cinema_30dp"
            android:layout_marginRight="@dimen/dimens_cinema_30dp"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_cinema_30dp" />
    </RelativeLayout>


    <com.bw.movie.utils.SeatTable
        android:layout_below="@+id/layout"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="#ffffff"
        android:id="@+id/seatView"/>

</RelativeLayout>
