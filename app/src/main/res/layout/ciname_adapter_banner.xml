<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="@dimen/dimens_fragmen_movie_158dp"
        android:layout_height="@dimen/dimens_fragmen_movie_223dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_movie_banner_image"
            android:layout_width="@dimen/dimens_fragmen_movie_158dp"
            android:layout_height="@dimen/dimens_fragmen_movie_223dp"
            app:roundedCornerRadius="@dimen/dimens_fragmen_movie_8dp" />

        <RelativeLayout
            android:layout_width="@dimen/dimens_fragmen_movie_158dp"
            android:layout_height="@dimen/dimens_fragmen_movie_36dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape_movie_child_relativelayout_background">

            <TextView
                android:id="@+id/tv_movie_banner_imagename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimens_fragmen_movie_10dp"
                android:textColor="@color/color_fragment_movie_FFFFFF"
                android:textSize="@dimen/dimens_fragmen_movie_16sp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>