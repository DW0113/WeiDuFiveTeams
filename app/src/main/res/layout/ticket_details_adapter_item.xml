<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginBottom="@dimen/dimens_fragmen_movie_10dp"
        android:background="@drawable/shape_suitable_cinema_item_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimens_fragmen_movie_10dp">

        <TextView
            android:id="@+id/tv_ticket_details_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_fragment_movie_999999"
            android:textSize="@dimen/dimens_fragmen_movie_12sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_ticket_details_item_type"
            android:layout_marginTop="@dimen/dimens_fragmen_movie_10dp">

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/tv_ticket_details_item_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_fragment_movie_000000"
                android:textSize="@dimen/dimens_fragmen_movie_24sp" />
            <View
                android:id="@+id/view"
                android:layout_marginRight="@dimen/dimens_fragmen_movie_10dp"
                android:layout_marginLeft="@dimen/dimens_fragmen_movie_10dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_ticket_details_item_start"
                android:background="@color/color_fragment_movie_999999"
                android:layout_width="@dimen/dimens_fragmen_movie_30dp"
                android:layout_height="@dimen/dimens_fragmen_movie_1dp"/>
            <TextView
                android:layout_toRightOf="@+id/view"
                android:text="xxxx"
                android:layout_centerVertical="true"
                android:id="@+id/tv_ticket_details_item_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_fragment_movie_999999"
                android:textSize="@dimen/dimens_fragmen_movie_18sp" />
            <TextView
                android:layout_marginTop="@dimen/dimens_fragmen_movie_8dp"
                android:layout_marginLeft="@dimen/dimens_fragmen_movie_5dp"
                android:text="end"
                android:layout_toRightOf="@+id/tv_ticket_details_item_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_fragment_movie_999999"
                android:textSize="@dimen/dimens_fragmen_movie_14sp" />
        </RelativeLayout>
        <ImageView
            android:layout_marginRight="@dimen/dimens_fragmen_movie_10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/movie_next"
            android:id="@+id/iv_ticket_details_item_next"
            android:layout_width="@dimen/dimens_fragmen_movie_20dp"
            android:layout_height="@dimen/dimens_fragmen_movie_20dp" />
        <TextView
            android:layout_marginRight="@dimen/dimens_fragmen_movie_5dp"
            android:layout_alignBottom="@+id/tv_ticket_details_item_money"
            android:layout_toLeftOf="@+id/tv_ticket_details_item_money"
            android:text="ï¿¥"
            android:textSize="@dimen/dimens_fragmen_movie_18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_ticket_details_item_money"
            android:textColor="@color/color_fragment_movie_b11450"
            android:layout_marginRight="@dimen/dimens_fragmen_movie_10dp"
            android:layout_toLeftOf="@+id/iv_ticket_details_item_next"
            android:textSize="@dimen/dimens_fragmen_movie_35sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>