<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_movie_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_movie_comment"
            android:layout_width="@dimen/dimens_fragmen_movie_50dp"
            android:layout_height="@dimen/dimens_fragmen_movie_50dp"
            android:layout_margin="@dimen/dimens_fragmen_movie_10dp"
            fresco:roundAsCircle="true" />

        <TextView
            android:id="@+id/tv_movie_comment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/sdv_movie_comment"
            android:textSize="@dimen/dimens_fragmen_movie_18sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_movie_comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_movie_comment"
        android:layout_marginTop="@dimen/dimens_fragmen_movie_5dp"
        android:ellipsize="end"
        android:lines="4" />

    <TextView
        android:id="@+id/tv_movie_comment_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_movie_comment_content"
        android:layout_marginTop="@dimen/dimens_fragmen_movie_5dp" />
    <View
        android:layout_marginBottom="@dimen/dimens_fragmen_movie_5dp"
        android:layout_marginTop="@dimen/dimens_fragmen_movie_5dp"
        android:layout_below="@+id/tv_movie_comment_time"
        android:background="@color/color_fragment_movie_333333"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_fragmen_movie_1dp"></View>
</RelativeLayout>