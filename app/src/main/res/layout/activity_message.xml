<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MessageActivity">
    <RelativeLayout
        android:layout_weight="1"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_fragment_my_0dp">
        <TextView
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/dimens_fragment_my_12dp"
            android:id="@+id/tv_activity_message_messages"
            android:text="系统消息"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_activity_message_unread"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/dimens_fragment_my_12dp"
            android:layout_marginLeft="@dimen/dimens_fragment_my_6dp"
            android:layout_toRightOf="@+id/tv_activity_message_messages"
            android:text="(3条未读）"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:padding="@dimen/dimens_fragment_my_6dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_fragment_my_0dp">
        <TextView
            android:textSize="@dimen/dimens_fragment_my_16dp"
            android:id="@+id/tv_activity_message_buyticket"
            android:text="购票信息"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/dimens_fragment_my_12dp"
            android:id="@+id/tv_activity_message_buyticket2"
            android:layout_marginTop="@dimen/dimens_fragment_my_6dp"
            android:layout_below="@+id/tv_activity_message_buyticket"
            android:text="您已成功订购两张电影票!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimens_fragment_my_6dp"/>
        <TextView
            android:textSize="@dimen/dimens_fragment_my_12dp"
            android:layout_alignParentRight="true"
            android:id="@+id/tv_activity_message_time"
            android:text="13:01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_below="@+id/tv_activity_message_buyticket2"
            android:background="@color/color_fragment_my_C0C0C0"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_fragment_my_1dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:padding="@dimen/dimens_fragment_my_6dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_fragment_my_0dp">
        <TextView
            android:textSize="@dimen/dimens_fragment_my_16dp"
            android:id="@+id/tv_activity_message_movie"
            android:text="电影信息"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/dimens_fragment_my_12dp"
            android:id="@+id/tv_activity_message_movie2"
            android:layout_marginTop="@dimen/dimens_fragment_my_6dp"
            android:layout_below="@+id/tv_activity_message_movie"
            android:text="有两部新电影即将上映"
            android:layout_marginBottom="@dimen/dimens_fragment_my_6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/dimens_fragment_my_12dp"
            android:layout_alignParentRight="true"
            android:text="08:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_below="@+id/tv_activity_message_movie2"
            android:background="@color/color_fragment_my_C0C0C0"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_fragment_my_1dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_fragment_my_0dp"
        android:layout_weight="1"
        android:padding="@dimen/dimens_fragment_my_6dp">

        <TextView
            android:textSize="@dimen/dimens_fragment_my_16dp"
            android:id="@+id/tv_activity_message_remind1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提醒信息" />

        <TextView
            android:textSize="@dimen/dimens_fragment_my_12dp"
            android:layout_marginBottom="@dimen/dimens_fragment_my_6dp"
            android:id="@+id/tv_activity_message_remind3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_activity_message_remind1"
            android:layout_marginTop="@dimen/dimens_fragment_my_6dp"
            android:text="您购买的电影将于2小时后放映，请提前到达。" />

        <TextView
            android:id="@+id/tv_activity_message_timeyear"
            android:textSize="@dimen/dimens_fragment_my_12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="10-11 14:20" />
        <View
            android:layout_below="@+id/tv_activity_message_remind3"
            android:background="@color/color_fragment_my_C0C0C0"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_fragment_my_1dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:padding="@dimen/dimens_fragment_my_6dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_fragment_my_0dp">
        <TextView
            android:textSize="@dimen/dimens_fragment_my_16dp"
            android:id="@+id/tv_activity_message_Videos"
            android:text="电影信息"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/dimens_fragment_my_12dp"
            android:layout_marginBottom="@dimen/dimens_fragment_my_6dp"
            android:id="@+id/tv_activity_message_Videos2"
            android:layout_marginTop="@dimen/dimens_fragment_my_6dp"
            android:layout_below="@+id/tv_activity_message_Videos"
            android:text="有两部新电影即将上映"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/dimens_fragment_my_12dp"
            android:layout_alignParentRight="true"
            android:text="08:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_below="@+id/tv_activity_message_Videos2"
            android:background="@color/color_fragment_my_C0C0C0"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_fragment_my_1dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:padding="@dimen/dimens_fragment_my_6dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_fragment_my_0dp">
        <TextView
            android:textSize="@dimen/dimens_fragment_my_16dp"
            android:id="@+id/tv_activity_message_remind2"
            android:text="提醒信息"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/dimens_fragment_my_12dp"
            android:layout_marginBottom="@dimen/dimens_fragment_my_6dp"
            android:id="@+id/tv_activity_message_remind5"
            android:layout_marginTop="@dimen/dimens_fragment_my_6dp"
            android:layout_below="@+id/tv_activity_message_remind2"
            android:text="您购买的电影将于2小时后放映,请提前到达"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_activity_message_yeardaytime"
            android:textSize="@dimen/dimens_fragment_my_12dp"
            android:layout_alignParentRight="true"
            android:text="10-11 14:20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_below="@+id/tv_activity_message_remind5"
            android:background="@color/color_fragment_my_C0C0C0"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_fragment_my_1dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:padding="@dimen/dimens_fragment_my_6dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_fragment_my_0dp">
        <TextView
            android:textSize="@dimen/dimens_fragment_my_16dp"
            android:id="@+id/tv_activity_message_buyticket3"
            android:text="购票信息"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/dimens_fragment_my_12dp"
            android:id="@+id/tv_activity_message_buyticket4"
            android:layout_marginTop="@dimen/dimens_fragment_my_6dp"
            android:layout_below="@+id/tv_activity_message_buyticket3"
            android:text="您以成功订购两张电影票!"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/dimens_fragment_my_12dp"
            android:layout_alignParentRight="true"
            android:text="13:01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_below="@+id/tv_activity_message_buyticket4"
            android:background="@color/color_fragment_my_C0C0C0"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_fragment_my_1dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:padding="@dimen/dimens_fragment_my_6dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_fragment_my_0dp">
        <TextView
            android:textSize="@dimen/dimens_fragment_my_16dp"
            android:id="@+id/tv_activity_message_Videos3"
            android:text="电影信息"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/dimens_fragment_my_12dp"
            android:layout_marginBottom="@dimen/dimens_fragment_my_6dp"
            android:id="@+id/tv_activity_message_Videos4"
            android:layout_marginTop="@dimen/dimens_fragment_my_6dp"
            android:layout_below="@+id/tv_activity_message_Videos3"
            android:text="有两部新电影即将上映"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/dimens_fragment_my_12dp"
            android:layout_alignParentRight="true"
            android:text="08:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_below="@+id/tv_activity_message_Videos4"
            android:background="@color/color_fragment_my_C0C0C0"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_fragment_my_1dp"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_message_activity_img"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dimens_fragment_my_10dp"
        android:src="@drawable/idea_activity_back"
        android:layout_width="@dimen/dimens_fragment_my_80dp"
        android:layout_height="@dimen/dimens_fragment_my_80dp" />
</LinearLayout>