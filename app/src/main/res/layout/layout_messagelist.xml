<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_activity_message_relaivelayout1"
        android:padding="@dimen/dimens_fragment_my_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_activity_message_title"
            android:textSize="@dimen/dimens_fragment_my_22dp"
            android:text="cdbska"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/tv_activity_message_time"
            android:textSize="@dimen/dimens_fragment_my_22dp"
            android:text="13:01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_activity_message2"
        android:layout_below="@+id/rl_activity_message_relaivelayout1"
        android:padding="@dimen/dimens_fragment_my_10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="9.9"
            android:id="@+id/tv_activity_message_content"
            android:textSize="@dimen/dimens_fragment_my_18dp"
            android:text="cdbska"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="0.1"
            android:id="@+id/tv_activity_message_sum"
            android:textSize="@dimen/dimens_fragment_my_16dp"
            android:gravity="center"
            android:textColor="@color/color_cinema_ffffff"
            android:text="1"
            android:background="@drawable/menssage"
            android:layout_width="@dimen/dimens_fragment_my_20dp"
            android:layout_height="@dimen/dimens_fragment_my_20dp" />
    </LinearLayout>
</RelativeLayout>
