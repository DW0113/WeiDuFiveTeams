<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <android.support.v4.view.ViewPager
        android:layout_marginBottom="@dimen/dimens_fragment_my_40dp"
        android:id="@+id/vp_main_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         />
    <RelativeLayout
        android:id="@+id/ll_main"
        android:layout_alignParentBottom="true"
        android:background="@color/color_fragment_movie_60333333"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_fragment_my_70dp">

    </RelativeLayout>
    <LinearLayout
       android:layout_marginBottom="@dimen/dimens_fragmen_movie_12dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_fragment_bottom_80dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/im_move_fragment"
            android:layout_width="@dimen/dimens_fragment_my_60dp"
            android:layout_height="@dimen/dimens_fragment_my_60dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/ic_launcher_background" />

        <ImageView
            android:id="@+id/im_cinema_fragment"
            android:layout_weight="1"
            android:layout_width="@dimen/dimens_fragment_my_60dp"
            android:layout_height="@dimen/dimens_fragment_my_60dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_launcher_background" />

        <ImageView
            android:id="@+id/im_my_fragment"
            android:layout_width="@dimen/dimens_fragment_my_60dp"
            android:layout_height="@dimen/dimens_fragment_my_60dp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dimens_fragment_bottom_12dp"
            android:layout_weight="1"
            android:src="@drawable/ic_launcher_background" />
    </LinearLayout>
</RelativeLayout>
