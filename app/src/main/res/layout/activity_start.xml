<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start_image"
    tools:context=".activity.StartActivity">
    <TextView
        android:layout_marginBottom="@dimen/dimens_start_24dp"
        android:layout_above="@+id/tv_start_title"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/dimens_start_20sp"
        android:textColor="@color/color_start_ffffff"
        android:text="维度影院"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_start_title"
        android:layout_marginBottom="@dimen/dimens_start_98dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textSize="@dimen/dimens_start_14sp"
        android:textColor="@color/color_start_ffffff"
        android:text="一场不一样的视觉盛宴"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>