<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginLeft="@dimen/dimens_cinema_30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.facebook.drawee.view.SimpleDraweeView
            android:src="@mipmap/ic_launcher"
            android:id="@+id/iv_image"
            android:layout_width="@dimen/dimens_cinema_40dp"
            android:layout_height="@dimen/dimens_cinema_40dp" />
        <TextView
            android:id="@+id/tv_name"
            android:layout_toRightOf="@+id/iv_image"
            android:text="狂风帝国建立空军实力的九分"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dimens_cinema_20dp"
            android:layout_height="@dimen/dimens_cinema_40dp" />

        <TextView
            android:id="@+id/tv_comments"
            android:layout_below="@+id/iv_image"
            android:text="评论评论评论哦i评论"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="@dimen/dimens_cinema_40dp" />

        <RelativeLayout
            android:layout_below="@+id/tv_comments"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_cinema_40dp">

            <TextView
                android:id="@+id/tv_data"
                android:text="事件 日期"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <ImageView
                android:layout_marginRight="@dimen/dimens_cinema_40dp"
                android:id="@+id/iv_praise"
                android:layout_alignParentRight="true"
                android:src="@drawable/com_icon_praise_default"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/dimens_cinema_20dp"
                android:layout_height="@dimen/dimens_cinema_20dp" />
            <TextView
                android:id="@+id/tv_num"
                android:text="0"
                android:paddingRight="@dimen/dimens_cinema_24dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
