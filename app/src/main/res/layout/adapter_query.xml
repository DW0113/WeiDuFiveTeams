<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="@dimen/dp_312dp"
        android:layout_height="@dimen/dimens_cinema_90dp"
        android:layout_margin="@dimen/dp_24dp">

        <TextView
            android:textSize="@dimen/sp_24"
            android:id="@+id/activity_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10dp"
            android:layout_marginTop="@dimen/dp_10dp"
            android:text="哈哈哈" />

        <TextView
            android:textSize="@dimen/dimens_cinema_24dp"
            android:id="@+id/starttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_time"
            android:layout_marginLeft="@dimen/dp_10dp"
            android:layout_marginTop="@dimen/dp_10dp"
            android:text="哈哈哈"
            />

        <TextView
            android:textSize="@dimen/dimens_cinema_24dp"
            android:id="@+id/stoptime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_time"
            android:layout_marginLeft="@dimen/dp_20dp"
            android:layout_marginTop="@dimen/dp_10dp"
            android:layout_toRightOf="@+id/activity_time"
            android:text="哈哈哈" />

        <TextView
            android:id="@+id/activity_national"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20dp"
            android:layout_marginTop="@dimen/dp_12dp"
            android:layout_toRightOf="@+id/activity_time"
            android:text="国语3D" />

        <TextView
            android:layout_centerInParent="true"
            android:text="国语3D"
            android:id="@+id/activity_qian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_50dp"
            android:layout_marginTop="@dimen/dp_30dp"
            android:layout_toRightOf="@+id/activity_national"
            />


        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8dp"
            android:layout_marginTop="@dimen/dp_20dp"
            android:layout_toRightOf="@+id/activity_qian"
            android:layout_centerInParent="true"
            android:text="44.4"
            android:textSize="@dimen/sp_25" />

        <ImageView
            android:id="@+id/iv_jump"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/dp_24dp"
            android:layout_height="@dimen/dp_24dp"
            android:layout_toRightOf="@+id/tv_price"
            android:src="@drawable/com_icon_next_default" />
    </RelativeLayout>


</RelativeLayout>